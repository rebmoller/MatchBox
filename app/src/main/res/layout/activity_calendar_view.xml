<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#fff">

<com.alamkanak.weekview.WeekView
    android:id="@+id/weekView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:eventTextColor="@android:color/white"
    app:textSize="12sp"
    app:hourHeight="60dp"
    app:headerColumnPadding="8dp"
    app:headerColumnTextColor="@color/colorPrimary"
    app:headerRowPadding="12dp"
    app:columnGap="8dp"
    app:noOfVisibleDays="3"
    app:headerRowBackgroundColor="@color/primary_text_material_dark"
    app:dayBackgroundColor="#05000000"
    app:todayBackgroundColor="@color/background_material_light"
    app:headerColumnBackground="#ffffffff"
    app:todayHeaderTextColor="@color/colorAccent"
    app:showNowLine="true"
    app:nowLineColor="@android:color/black"
    app:nowLineThickness="3dp"/>

</RelativeLayout>
